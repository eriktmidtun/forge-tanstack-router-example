{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",

		"outDir": "./dist/src",


		"esModuleInterop": false,
		"skipLibCheck": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"isolatedModules": true,

		"removeComments": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
